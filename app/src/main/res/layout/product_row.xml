<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:layout_margin="5dp"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_prod"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:src="@drawable/product_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/nom_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:text="Product name"
                android:textColor="#2d2d2d"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="(1/150)"
                android:textColor="#7b7b7b"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/price_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="price here"
                android:textColor="#a1a1a1"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/direction_img"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"
                app:srcCompat="@drawable/direction" />

            <TextView
                android:id="@+id/direction"
                android:layout_width="117dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="-6dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#e1e1e1" />
</LinearLayout>